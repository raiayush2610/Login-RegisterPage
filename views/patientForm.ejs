<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<main class="form-signin table-body">
  <form action="/submit" method="post">
    
    <h1 class="h3 mb-3 fw-normal">Patient Form</h1>

    <div class="form-floating">
      <input type="text" name="fname" class="form-control bottom" id="fname" placeholder="Patient name" required autofocus>
      <label for="fname">Patient name</label>
    </div>
    <div class="form-floating">
      <input type="number" name="Age" class="form-control bottom" id="Age" placeholder="Patient's Age"required>
      <label for="Age">Patient's Age</label>
    </div>
    <div class="form-floating">
      <input type="name" name="Sex"class="form-control bottom" id="Sex" placeholder="Sex:"required>
      <label for="Area"> Sex:</label>
    </div>
    <div class="form-floating">
      <input type="tel" name="phoneNumber"class="form-control bottom" id="phoneNumber" placeholder="phoneNumber:"required>
      <label for="Area"> phoneNumber</label>
    </div>
    <div class="form-floating">
        <input type="name" name="Area"class="form-control bottom" id="Area" placeholder="Area name:"required>
        <label for="Area"> Patient Area :</label>
    </div>
    <div class="form-floating">
      <input type="name" name="disease"class="form-control bottom" id="disease" placeholder="disease:"required>
      <label for="disease"> Disease :</label>
    </div>

   
    <button class="w-100 btn btn-lg btn-primary" type="submit">Submit Our Form</button>
    <p class="mt-5 mb-3 text-muted">&copy; hospital</p>
  </form>
</main>


